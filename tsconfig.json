{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "allowJs": true,
    "useUnknownInCatchVariables": true,
    "target": "ES2022",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./src",
    "noEmit": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "scripts"
  ],
  "files": [
    "src/types/index.d.ts"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  }
}